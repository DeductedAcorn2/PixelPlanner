<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PWPlanner"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="PWPlanner.MainWindow"
        mc:Ignorable="d"
        Title="Pixel Worlds Planner" Height="760.431" Width="1000.824"
        ContentRendered="Window_ContentRendered">

    <!-- Shortcuts -->

    <DockPanel LastChildFill="true" >
        <!-- Status -->
        <StatusBar DockPanel.Dock="Bottom" Height="30">
            <StackPanel MinHeight="20">
                <Label x:Name="PosLabel" Content="Position"/>
            </StackPanel>
        </StatusBar>

        <!-- Top Menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="New World.." Click="NewWorld_Click">
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/Resources/Icons/UI/appbar.add.png" Width="20" Height="20"/>
                    </MenuItem.Icon>
                </MenuItem>
                
                <Separator />
                <MenuItem Header="_Open World.." Click="LoadWorld_Click">
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/Resources/Icons/UI/appbar.folder.open.png"  Width="20" Height="20"/>
                    </MenuItem.Icon>
                </MenuItem>
                
                <MenuItem Header="_Save World.." Click="SaveWorld_Click">
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/Resources/Icons/UI/appbar.save.png"  Width="20" Height="20"/>
                    </MenuItem.Icon>
                </MenuItem>
            <Separator />
                <MenuItem Header="_Save to Image" Click="SaveImage_Click" >
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/Resources/Icons/UI/appbar.image.png" Width="20" Height="20" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="_Exit" >
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/Resources/Icons/UI/appbar.door.leave.png" Width="20" Height="20" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Grid" x:Name="gridButton" Click="Grid_Click" IsChecked="True"/>
                <Separator/>
                <MenuItem Header="Orbs" >
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/Resources/Icons/Forest.png"/>
                    </MenuItem.Icon>
                    <MenuItem.Resources>
                        <RadioButton x:Key="RadioButtonResource" x:Shared="false" HorizontalAlignment="Center" GroupName="MenuItemRadio" IsHitTestVisible="False"/>
                    </MenuItem.Resources>
                    <MenuItem.ItemContainerStyle>
                        <Style TargetType="MenuItem">
                            <Setter Property="Icon" Value="{DynamicResource RadioButtonResource}"/>
                            <EventSetter Event="Click" Handler="OrbsRadioButton_Click"/>
                        </Style>
                    </MenuItem.ItemContainerStyle>
                    
                    <MenuItem Header="Forest" x:Name="Forest">
                        <MenuItem.Icon>
                            <Image Source="pack://application:,,,/Resources/Icons/Forest.png"/>
                        </MenuItem.Icon>
                    </MenuItem>

                    <MenuItem Header="Night" x:Name="Night">
                        <MenuItem.Icon>
                            <Image Source="pack://application:,,,/Resources/Icons/Night.png"/>
                        </MenuItem.Icon>
                    </MenuItem>

                    <MenuItem Header="Star" x:Name="Star">
                        <MenuItem.Icon>
                            <Image Source="pack://application:,,,/Resources/Icons/Star.png"/>
                        </MenuItem.Icon>
                    </MenuItem>

                    <MenuItem Header="Candy" x:Name="Candy">
                        <MenuItem.Icon>
                            <Image Source="pack://application:,,,/Resources/Icons/Candy.png"/>
                        </MenuItem.Icon>
                    </MenuItem>

                    <MenuItem Header="Winter" x:Name="Winter">
                        <MenuItem.Icon>
                            <Image Source="pack://application:,,,/Resources/Icons/Winter.png"/>
                        </MenuItem.Icon>
                    </MenuItem>

                    <MenuItem Header="Alien" x:Name="Alien">
                        <MenuItem.Icon>
                            <Image Source="pack://application:,,,/Resources/Icons/Alien.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" x:Name="about" Click="About_Click" >
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/Resources/Icons/UI/appbar.information.png" Width="20" Height="20" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <!-- Left Tools -->
        <Border MinWidth="260" BorderBrush="Gray" BorderThickness="1,1,1,0" DockPanel.Dock="Left" Width="114">
            <Grid Height="671" VerticalAlignment="Bottom" Margin="9,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="41*"/>
                    <ColumnDefinition Width="199*"/>
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="ComboTypes" HorizontalAlignment="Left" Margin="10,306,0,0" VerticalAlignment="Top" Width="220" SelectionChanged="ComboTypes_SelectionChanged" Grid.ColumnSpan="2"/>
                <Border BorderBrush="Gray" BorderThickness="2" HorizontalAlignment="Left" Height="328" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="220" Grid.ColumnSpan="2">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="-2,-1,-1,-3" Height="328" VerticalAlignment="Top">
                        <Canvas x:Name="TileCanvas" MouseDown="TileSelect_OnClick" Height="312" Width="205"/>
                    </ScrollViewer>
                </Border>
                <Label Content="Background Color" HorizontalAlignment="Left" Margin="10,245,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                <xctk:ColorPicker x:Name="ColorSelector" HorizontalAlignment="Left" Margin="79,249,0,0" VerticalAlignment="Top" Width="110" SelectedColorChanged="OnColorSelect" Grid.Column="1" />
                <Label Content="Zoom" HorizontalAlignment="Left" Margin="10,275,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                <Slider HorizontalAlignment="Left" Margin="12,280,0,0" VerticalAlignment="Top" Width="177" Minimum="5" Maximum="155" Value="75" TickFrequency="10" IsSnapToTickEnabled="True" x:Name="zoomSlider" ValueChanged="ZoomSlider_ValueChanged" Height="21" Grid.Column="1"/>
            </Grid>
        </Border>

        <!-- Planner -->
        <ScrollViewer x:Name="sv" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="#2E404B">
            <Canvas x:Name="MainCanvas" DockPanel.Dock="Right" Background="White" MouseMove="MainCanvas_MouseMove" Height="679" RenderOptions.EdgeMode="Unspecified" MouseWheel="MainCanvas_MouseWheel" MouseDown="MainCanvas_MouseDown"/>
        </ScrollViewer>

    </DockPanel>

</Window>

