<Window x:Class="PWPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PWPlanner"
        mc:Ignorable="d"
        Title="Pixel Worlds Planner" Height="760.431" Width="1000.824">
    <DockPanel LastChildFill="true">
        <!-- Status -->
        <Border BorderBrush="Gray" DockPanel.Dock="Bottom" BorderThickness="2">
            <StackPanel MinHeight="25">
                <Label x:Name="PosLabel" Content="Label"/>
            </StackPanel>
        </Border>

        <!-- Left Tools -->
        <Border MinWidth="260" BorderBrush="Gray" DockPanel.Dock="Left" BorderThickness="1" Width="114">
            <Grid Height="697" VerticalAlignment="Top">
                <ComboBox x:Name="ComboTypes" HorizontalAlignment="Left" Margin="61,398,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboTypes_SelectionChanged"/>

                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="262" Margin="10,425,0,0" VerticalAlignment="Bottom" Width="238">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="0,0,0,-1" Height="261" VerticalAlignment="Top">
                        <Canvas x:Name="TileCanvas" MouseDown="TileSelect_OnClick"/>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>

        <!-- Planner -->
        <ScrollViewer x:Name="sv" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Canvas x:Name="MainCanvas" DockPanel.Dock="Right" Background="White" MouseMove="MainCanvas_MouseMove" MouseDown="MainCanvas_MouseDown"/>
        </ScrollViewer>


    </DockPanel>


</Window>
